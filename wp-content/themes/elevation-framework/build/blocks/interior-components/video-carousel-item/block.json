{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "title": "Video Full Screen: Pop Up",
  "name": "elevation/video-full-screen-pop-up",
  "version": "1.0.0",
  "category": "elevation-blocks",
  "icon": "video-alt3",
  "description": "Video Full Screen with Pop Up",
  "textdomain": "elevation",
  "supports": {
    "html": true,
    "anchor": true,
    "align": [
      "full"
    ],
    "alignWide": false,
    "color": {
      "background": true,
      "gradients": false,
      "text": true
    },
    "spacing": {
      "margin": [
        "top",
        "bottom"
      ]
    }
  },
  "attributes": {
    "id": {
      "type": "string",
      "default": ""
    },
    "preview": {
      "type": "boolean",
      "default": false
    },
    "align": {
      "type": "array",
      "default": "full"
    },
    "video": {
      "type": "object",
      "default": {
        "url": "",
        "videoType": "youtube"
      }
    },
    "buttonLabel": {
      "type": "string",
      "default": "Watch the Video"
    },
    "imgMobile": {
      "type": "object",
      "default": {
        "url": "",
        "alt": "",
        "height": "500",
        "width": "500",
        "focalPoint": {
          "x": 0.5,
          "y": 0.5
        }
      }
    },
    "imgTablet": {
      "type": "object",
      "default": {
        "url": "",
        "alt": "",
        "height": "500",
        "width": "500",
        "focalPoint": {
          "x": 0.5,
          "y": 0.5
        }
      }
    },
    "imgDesktop": {
      "type": "object",
      "default": {
        "url": "",
        "alt": "",
        "height": "500",
        "width": "500",
        "focalPoint": {
          "x": 0.5,
          "y": 0.5
        }
      }
    }
  },
  "example": {
    "attributes": {
      "preview": true
    }
  },
  "editorScript": [
    "file:index.js"
  ],
  "style": [
    "file:style-index.css"
  ],
  "editorStyle": [
    "file:index.css"
  ],
  "script": [
    "file:view.js"
  ]
}